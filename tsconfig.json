{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "node",
      "chrome"
    ],
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "pages"
  ]
}
